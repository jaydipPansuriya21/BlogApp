<%= form_with model: [ @article, @article.comments.build ], id: 'comment_form' do |form| %>
  
  <%= form.hidden_field :commenter, value: get_current_user.name %>
  <div class="w-auto p-3">
    <%= form.text_area :body, class: "w-auto p-3", rows: 3, cols: 100%>
  </div>

  <div>
    <%= form.submit 'publish' %>
  </div>
<% end %>