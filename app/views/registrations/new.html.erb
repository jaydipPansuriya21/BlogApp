<div class="back">
  <div class="div-center">

    <div>
    <h1>Sign Up</h1>
    <div class="form-group row">
      <%= form_with model: @user, url: sign_up_path do |f| %>
        <div class="col-xs-4 mb-3 ">
        <%= f.label 'email' %><br>
        <%= f.text_field :email , class: "input-textbox"%>
        </div>
        <div class="col-xs-4 mb-3 ">
        <%= f.label 'name' %><br>
        <%= f.text_field :name, class: "input-textbox" %>
        </div>
        <div class="col-xs-4 mb-3">
        <%= f.label 'password' %><br>
        <%= f.password_field :password, class: "input-textbox" %>
        </div>
        <div class="col-xs-4 mb-3 ">
        <%= f.label 'password_confirmation' %><br>
        <%= f.password_field :password_confirmation, class: "input-textbox" %>
        </div>
        <p>
        <%= f.submit 'Sign Up', :class => 'btn-secondary me-3' %>
        <%= link_to 'Current User ? ', sign_in_path ,:class => 'link-secondary mr-3' %>
        </p>
      <% end %>
  </div>
  </div>
</div>
</div>